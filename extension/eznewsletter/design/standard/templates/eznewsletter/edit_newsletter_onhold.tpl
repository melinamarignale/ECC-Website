<label>{'Newsletter name'|i18n('design/eznewsletter/edit_newsletter_onhold')}</label>
{$onhold_item.newsletter.name|wash}
</div>

<label>{'Sent to address'|i18n('design/eznewsletter/edit_newsletter_onhold')}</label>
{$onhold_item.user_data.email|wash}

<label>{'Recipient name'|i18n('design/eznewsletter/edit_newsletter_onhold')}</label>
{$onhold_item.user_data.name|wash}


</div>

<div class="block">
<form name="onhold_entry" method="post" action={concat( 'newsletter/list_bounce/onhold/', $onhold_item.id, '/' )|ezurl}>
<label>{'Set new sendout status'|i18n( 'design/eznewsletter/edit_newsletter_onhold' )}</label>
<select name="NewSendStatus">
{foreach $send_status as $key => $status}
    <option {cond( $onhold_item.send_status|eq( $key ), 'selected="selected"', '' )} value="{$key}">{$status|wash}</option>
{/foreach}
</select>

<input class="button" type="submit" name="EditOnHold" value="{'Set'|i18n( 'design/eznewsletter/edit_newsletter_onhold' )}" />
</form>
